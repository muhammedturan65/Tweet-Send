{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/tweet",
            "dest": "/api/tweet.py"
        },
        {
            "src": "/api/health",
            "dest": "/api/health.py"
        },
        {
            "src": "/api/quotes",
            "dest": "/api/quotes.py"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "crons": [
        {
            "path": "/api/tweet",
            "schedule": "*/15 * * * *"
        }
    ]
}
